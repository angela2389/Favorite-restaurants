@model Restaurant

<section class="panel panel-default">
    <h3 class="panel-heading">@Model.Name</h3>
    <div class="restaurantbody">
        <div class="restaurantimg">
            <div class="rating">
                <b class="rating-text">Average Rating</b>
                <div class="average-rating">
                    <div class="rating-no" style="background-color:rgba(80,280,10,0.@Math.Round(Model.AverageRating(@Model)))">
                        <b>@Math.Round(Model.AverageRating(@Model), 1)</b>
                    </div>
                </div>
            </div>
            <img src="@Model.Image" />
        </div>
        <div class="restaurantdetails">
            <b>Address</b>
            <p> @Model.Street </p>
            <p>@Model.Postal @Model.City </p><br />
            <b>Phone number</b> <p>@Model.PhoneNumber</p><br />
            <b>Cuisine</b> <p>@Model.Cuisine</p>
        </div>
    </div>
    <div class="panel-footer">
        <a class="btn btn-primary" asp-action="Details" asp-route-id="@Model.Id">Details</a>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    </div>
</section>