@model Restaurant 

@{ 
    ViewBag.Title = "Create";
}

<div>

    <h1>Create</h1>

    <div>
        <form method="post" asp-antiforgery="true">
            <div class="form-group">
                <label asp-for="Name" class="col-md-2"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="col-md-2"></label>
                <input asp-for="Street" />
                <span asp-validation-for="Street"></span>
            </div>
            <div class="form-group">
                <label asp-for="Postal" class="col-md-2"></label>
                <input asp-for="Postal" />
                <span asp-validation-for="Postal"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="col-md-2"></label>
                <input asp-for="City" />
                <span asp-validation-for="City"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="col-md-2"></label>
                <input asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="col-md-2"></label>
                <input asp-for="Image" />
                <span asp-validation-for="Image"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cuisine" class="col-md-2"></label>
                <select asp-for="Cuisine" asp-items="@Html.GetEnumSelectList(typeof(CuisineType))"></select>
                <span asp-validation-for="Cuisine"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save!" />
            </div>
        </form>

    </div>    

</div>