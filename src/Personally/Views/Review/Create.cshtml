@model RestaurantGuide.ViewModels.ReviewCreateViewModel

@{
    ViewBag.Title = "Create";
}

<div>

    <h1>Add a review</h1>

    <div>
        <form method="post" asp-antiforgery="true">
            <div class="form-group">
                <label asp-for="Date" class="col-md-2"></label>
                <input asp-for="Date" type="date"/>
            </div>
            
            <div class="form-group">
                <label asp-for="Rating" class="col-md-2"></label>
                <select asp-for="Rating">
                    <option value="10">10</option>
                    <option value="9">9</option>
                    <option value="8">8</option>
                    <option value="7">7</option>
                    <option value="6">6</option>
                    <option value="5">5</option>
                    <option value="4">4</option>
                    <option value="3">3</option>
                    <option value="2">2</option>
                    <option value="1">1</option>
                </select>
                <span asp-validation-for="Rating"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comment" class="col-md-2"></label>
                <input asp-for="Comment" class="inputfield"/>
                <span asp-validation-for="Comment"></span>
            </div>

            <div>
                <input type="submit" value="Save!" />
            </div>
        </form>

    </div>
</div>